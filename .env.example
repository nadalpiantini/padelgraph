# ============================================================================
# APPLICATION
# ============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=PadelGraph

# ============================================================================
# SUPABASE
# ============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================================================
# TWILIO (WhatsApp & SMS)
# ============================================================================
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886
TWILIO_SMS_FROM=+1234567890

# ============================================================================
# EMAIL (Resend or Postmark - choose one)
# ============================================================================
# Option 1: Resend
RESEND_API_KEY=re_your_api_key_here

# Option 2: Postmark
# POSTMARK_SERVER_TOKEN=your-postmark-token

# From email address
EMAIL_FROM=noreply@padelgraph.com

# ============================================================================
# STRIPE (Payments - for future sprints)
# ============================================================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# ============================================================================
# MONITORING & ANALYTICS (Optional for Sprint 0)
# ============================================================================
# Sentry
SENTRY_DSN=https://your-sentry-dsn
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn

# Google Analytics (Optional)
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# ============================================================================
# STORAGE (Supabase Storage by default)
# ============================================================================
STORAGE_DRIVER=supabase

# If using S3/R2 instead of Supabase Storage:
# S3_BUCKET=your-bucket-name
# S3_REGION=us-east-1
# S3_ACCESS_KEY=your-access-key
# S3_SECRET_KEY=your-secret-key
# S3_ENDPOINT=https://your-endpoint (for R2 or custom S3)
